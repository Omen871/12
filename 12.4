using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp4
{
    internal class Book
    {
        private readonly int ISBN;
        private string nameBook, author;
        public Book(int iSBN, string nameBook, string author)
        {
            ISBN = iSBN;
            this.nameBook = nameBook;
            this.author = author;
        }
        public string NameBook
        {
            get { return nameBook; }
            set { nameBook = value; }
        }
        public string Author
        {
            get { return author; }
            set { author = value; }
        }
        public void Info()
        {
            Console.WriteLine($"Номер книги: {ISBN}, название: {NameBook}, автор: {author}");
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            Book book = new Book(2, "Война и мир", "Л.Н. Толстой");
            book.Info();
        }
    }
}